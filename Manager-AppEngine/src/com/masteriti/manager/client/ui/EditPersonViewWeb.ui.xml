<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel width="100%">
			<g:Cell height="40px" verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="PERSON FORM" horizontalAlignment="ALIGN_CENTER"/>
			</g:Cell>
			<g:HorizontalPanel spacing="1">
				<g:Cell width="100px" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="First Name" wordWrap="false"/>
				</g:Cell>
				<g:Cell width="70">
					<g:TextBox textAlignment="ALIGN_LEFT" ui:field="fldFirstName" focus="true"/>
				</g:Cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="1">
				<g:Cell width="100px" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT">
					<g:Label text="Last Name" wordWrap="false"/>
				</g:Cell>
				<g:TextBox textAlignment="ALIGN_LEFT" ui:field="fldLastName"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="1">
				<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="100px">
					<g:Label text="Main Phone" wordWrap="false"/>
				</g:Cell>
				<g:TextBox textAlignment="ALIGN_LEFT" ui:field="fldMainPhone"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="254px">
				<g:Button ui:field="btnDone">Done</g:Button>
				<g:Button ui:field="btnClear">Clear</g:Button>
				<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="btnSave">Save</g:Button>
				</g:Cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:Label text="Ready" width="100%" height="80px" ui:field="lblStatus"/>
	</g:HTMLPanel>
</ui:UiBinder> 